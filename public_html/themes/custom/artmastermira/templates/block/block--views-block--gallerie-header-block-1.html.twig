{% set base_url = url('<front>')|render|split('/', -1)|join('/') %}
{% if image %}
    {% set hero_image = image %}
{% else %}
    {% set hero_image = base_url ~ '/themes/custom/artmastermira/dist/assets/mainv1.jpg' %}
{% endif %}
<div class="relative">
    <div class="h-[520px] overflow-hidden">
        <div class="absolute inset-0 bg-header-linear-gradient flex flex-col justify-center items-center">
            <div class="flex flex-col max-w-[1170px] w-full gap-5 text-white">
                <h1 class=" md:text-6xl text-4xl text-center mt-40">{{'Галереи'|t}}</h1>
            </div>
        </div>
        <img class="h-[520px] object-cover w-full" src="{{hero_image}}" alt="">
    </div>
    <div class="flex w-full absolute bottom-0 rotate-180 z-10">
        <div class="flex lg:basis-2/5 basis-1/5 h-[50px] bg-grayBase relative slanted-div-left z-10"></div>
        <div class="flex flex-1 relative overflow-hidden">
            <div class="flex h-1/2 w-full bg-lotion shadow-xl"></div>
        </div>
        <div class="flex lg:basis-2/5 basis-1/5 h-[50px] bg-grayBase ml-auto relative slanted-div-right"></div>
    </div>
</div>